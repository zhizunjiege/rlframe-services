{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile Protos (Python)",
      "type": "shell",
      "command": "conda activate game; python -m grpc_tools.protoc --proto_path=. --python_out=. --grpc_python_out=. ./protos/*.proto; yapf protos -i -p -r",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run UnitTest",
      "type": "shell",
      "command": "conda activate game; python -m unittest discover -s tests",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
